<div>
    <%= form_for :new_session, :url => {:action => 'create', :controller => 'api/session'} do |f| %>
        
        <%= f.text_field :username, :placeholder => 'username' %>
        <%= f.password_field :password, :placeholder => 'password' %>
        <%= f.submit 'Sign In' %>
    
    <% end %>
</div>